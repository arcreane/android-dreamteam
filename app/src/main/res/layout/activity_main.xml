<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text2"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="1"
        android:inputType="textPersonName"
        android:background="@android:color/transparent"
        android:layout_alignBaseline="@id/text2"
        android:layout_marginLeft="190sp"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text3"
        android:layout_below="@+id/text2"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="1"
        android:inputType="textPersonName"
        android:layout_below="@+id/text3"
        android:background="@android:color/transparent"
        android:layout_alignBaseline="@id/text3"
        android:layout_marginLeft="130sp"/>


    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:ems="4"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="141dp"
        android:layout_height="162dp"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:onClick="onClick3"
        android:layout_marginTop="14dp"
        android:src="@drawable/pierre" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="141dp"
        android:layout_height="162dp"
        android:layout_below="@+id/image1"
        android:onClick="onClick4"
        android:layout_centerHorizontal="true"
        android:src="@drawable/feuille" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="141dp"
        android:layout_height="162dp"
        android:layout_below="@+id/image2"
        android:layout_centerHorizontal="true"
        android:onClick="onClick5"
        android:src="@drawable/cizeau" />

    <EditText
        android:id="@+id/editTexta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="200sp"
        android:background="@android:color/transparent"
        android:ems="3"
        android:inputType="textPersonName"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editTextb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="350sp"
        android:background="@android:color/transparent"
        android:ems="3"
        android:inputType="textPersonName"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editTextc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="520sp"
        android:background="@android:color/transparent"
        android:ems="3"
        android:inputType="textPersonName"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editTextd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280sp"
        android:layout_marginTop="200sp"
        android:background="@android:color/transparent"
        android:ems="3"
        android:inputType="textPersonName"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editTexte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280sp"
        android:layout_marginTop="350sp"
        android:background="@android:color/transparent"
        android:ems="3"
        android:inputType="textPersonName"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editTextf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280sp"
        android:layout_marginTop="520sp"
        android:background="@android:color/transparent"
        android:ems="3"
        android:inputType="textPersonName"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/texty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texty"
        android:layout_above="@id/image1"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textz"
        android:layout_above="@id/image1"
        android:layout_marginLeft="230sp"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@+id/image3"
        android:layout_marginHorizontal="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/bouton2" />


</RelativeLayout>